{
    "$schema": "http://json-schema.org/draft-08/schema#",
    "$id": "http://our.company.com/companyUpdate.schema.json",
    "type": "object",
    "properties": {
      "from_user": {
        "type": "integer",
        "minimum": 1
      },    
      "to_user": {
        "type": "string",
        "minLength": 1,
        "maxLength": 30
      },
      "from_first_name": {
        "type": "string",
        "minimum": 1
      },    
      "to_first_name": {
        "type": "string",
        "minimum": 1
      },    
      "body": {
        "type": "string",
        "minLength": 1,
        "maxLength": 500
      }
    },
    "additionalProperties": false,
    "required": [
      "from_user",
        "to_user",
        "body"
    ]
  }
  